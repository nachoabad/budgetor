<div class="d-flex justify-content-between">
  <h3>Mis Facturas</h3>
  <%= link_to 'Nueva Factura', new_invoice_path %>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Cliente</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.updated_at.to_date %></td>
          <td><%= invoice.client.name %></td>
          <td><%= link_to 'Ver', invoice %></td>
          <td><%= link_to 'Borrar', invoice, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>