<%= render "devise/shared/error_messages", resource: resource %>
<div class="d-flex justify-content-center text-center mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-width-400'}) do |f| %>

    <h2>Registro</h2>
    <div class="form-group mt-3">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :contraseña %>
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :confirmar_contraseña %>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <%= f.submit "Registrarme", class: 'btn btn-lg btn-primary btn-block mb-3' %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>