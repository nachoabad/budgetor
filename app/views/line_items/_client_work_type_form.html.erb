<%= form_with(url: new_line_item_path, local: true, method: "get", html: {class: 'form-width-400'}) do %>
  <% if @line_itemable %>
    <%= hidden_field_tag 'line_itemable_id', @line_itemable.id %>
    <%= hidden_field_tag 'line_itemable_type', @line_itemable.class.name %>
  <% else %>
    <div class="form-group">
      <%= hidden_field_tag 'line_itemable_type', controller_name.singularize.camelize %>
      <%= select_tag "client", options_from_collection_for_select(current_user.clients.all, "id", "name"), prompt: "Selecciona Cliente", class: 'form-control', required: true %>
    </div>
  <% end %>
  <div class="form-group">
    <%= select_tag "work_type", options_from_collection_for_select(WorkType.all, "id", "name"), prompt: "Selecciona Tipo de Estimado", class: 'form-control', required: true %>
  </div>
   <div class="form-group">
    <%= text_field_tag :address, nil, class: 'form-control', placeholder: 'DirecciÃ³n del Trabajo' %>
  </div>
  <%= submit_tag "Crear Estimado", class: 'btn btn-lg btn-block btn-primary' %>
<% end %>