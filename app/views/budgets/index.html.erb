<div class="d-flex justify-content-between">
  <h3>Mis Estimados</h3>
  <%= link_to 'Nuevo Estimado', new_budget_path %>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Cliente</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @budgets.each do |budget| %>
        <tr>
          <td><%= l budget.updated_at.to_date %></td>
          <td><%= budget.client.name %></td>
          <td><%= link_to 'Ver', budget %></td>
          <td><%= link_to 'Editar', edit_budget_path(budget) %></td>
          <td><%= link_to 'Borrar', budget, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
